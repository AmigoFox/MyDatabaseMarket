@model IEnumerable<MyDatabaseMarket.Database.Order>
@{
    ViewData["Title"] = "Мои заказы";
}

<div class="mt-3">
    <a asp-action="Index" asp-controller="Account" class="btn btn-secondary">
        ← Назад в личный кабинет
    </a>
</div>

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Тип БД</th>
            <th>Размер (GB)</th>
            <th>IOPS</th>
            <th>Storage</th>
            <th>Страны</th>
            <th>Цена (USD)</th>
            <th>Цена (RUB)</th>
            <th>Статус</th>
            <th>Изменить конфигурацию</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.DatabaseType</td>
                <td>@order.SizeGB</td>
                <td>@order.IOPS</td>
                <td>@order.StorageType</td>
                <td>@order.Country</td>
                <td>@order.PriceUSD</td>
                <td>@order.PriceRUB</td>
                <td>@order.Status</td>

                <td>
                    <a href="/Calculator?id=@order.Id" class="btn btn-warning">Изменить</a>
                </td>

            </tr>
        }
    </tbody>
</table>
